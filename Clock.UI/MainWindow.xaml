<Window x:Class="Clock.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clock.UI"
        x:Name="mainWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        AllowsTransparency="True"
        Title="Clock On Screen" Height="120" Width="200" Background="{x:Null}">
    <Grid>
        <Label x:Name="lblClock" Content="00:00" HorizontalAlignment="Center" VerticalAlignment="Center" Height="89" Width="182" FontSize="60" RenderTransformOrigin="0.461,0.525" Foreground="Black" BorderThickness="0" Margin="10,0,0,0" FontWeight="Bold" ScrollViewer.VerticalScrollBarVisibility="Disabled" />
    </Grid>
</Window>
